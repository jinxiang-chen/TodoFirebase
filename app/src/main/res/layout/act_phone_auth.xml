<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout2">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editPhone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:hint="Phone"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editCode"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:hint="Code" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editPhone"/>
    <Button
            android:text="GetCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGetCode" app:layout_constraintStart_toEndOf="@+id/editPhone"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/editPhone"/>
    <Button
            android:text="login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignIn"
            app:layout_constraintStart_toEndOf="@+id/editCode" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnGetCode"/>
    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignOut" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSignIn"
            app:layout_constraintStart_toEndOf="@+id/editCode" android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtContent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSignOut" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>